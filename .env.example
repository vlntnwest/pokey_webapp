# ===========================================
# POKEY WEBAPP - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!
# ===========================================

# Server Configuration
PORT=5001
CLIENT_URL=http://localhost:3000

# MongoDB Atlas
# Get credentials from: https://cloud.mongodb.com/
DB_USER_PASS=your_mongodb_password

# Thermal Printer (optional)
PRINTER_HOST=192.168.1.100
PRINTER_PORT=9100

# Auth0 Configuration
# Get credentials from: https://manage.auth0.com/
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_DOMAIN=your-tenant.eu.auth0.com
AUTH0_AUDIENCE=https://your-tenant.eu.auth0.com/api/v2/

# Stripe Configuration
# Get credentials from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET_KEY=whsec_your_webhook_secret

# Email Configuration (Gmail SMTP)
# Use App Password: https://myaccount.google.com/apppasswords
GMAIL_ACCOUNT=your_email@gmail.com
GMAIL_NODEMAILER_PASSWORD=your_app_password
